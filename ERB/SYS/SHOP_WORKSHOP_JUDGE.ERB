		LOCAL:0 /= 100
	ENDIF
ENDIF
SIF TALENT:MASTER:Debug && (FLAG:1109 & 1) && (FLAG:1109 & 4)
	PRINTFORML ;;; %CALLNAME:COUNT%의 유혹 대상 선택 시작  주인 선택 폭：{LOCAL:0}
;全体選択値を設定する
FOR LOCAL:5, 0, CHARANUM
	;個人選択値初期化
	LOCAL:(100 + LOCAL:5) = 0
	;自分はスキップ
	SIF LOCAL:5 == FLAG:1111
		CONTINUE
	;工房に居なければスキップ
	SIF CFLAG:(LOCAL:5):4 != 3
		CONTINUE
