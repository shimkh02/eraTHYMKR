			PRINTFORMW ＜%조사처리(TSTR:0,"가")% 높은 순으로 정렬했습니다＞
		ENDIF
	CASE 2
		IF TFLAG:1 == 1
			SORTCHARA EXP:(TFLAG:2)
			PRINTFORMW ＜%조사처리(TSTR:0,"가")% 낮은 순으로 정렬했습니다＞
		ELSE
			SORTCHARA EXP:(TFLAG:2), BACK
			PRINTFORMW ＜%조사처리(TSTR:0,"가")% 높은 순으로 정렬했습니다＞
		ENDIF
	CASE 3
		IF TFLAG:1 == 1
			SORTCHARA MARK:(TFLAG:2)
			PRINTFORMW ＜%조사처리(TSTR:0,"가")% 낮은 순으로 정렬했습니다＞
		ELSE
			SORTCHARA MARK:(TFLAG:2), BACK
			PRINTFORMW ＜%조사처리(TSTR:0,"가")% 높은 순으로 정렬했습니다＞
		ENDIF
	CASE 4
		IF TFLAG:1 == 1
			SORTCHARA JUEL:(TFLAG:2)
			PRINTFORMW ＜%조사처리(TSTR:0,"가")% 낮은 순으로 정렬했습니다＞
		ELSE
			SORTCHARA JUEL:(TFLAG:2), BACK
			PRINTFORMW ＜%조사처리(TSTR:0,"가")% 높은 순으로 정렬했습니다＞
		ENDIF
	CASE 5 , 7
		IF TFLAG:1 == 1
			SORTCHARA CFLAG:(TFLAG:2)
			PRINTFORMW ＜%조사처리(TSTR:0,"가")% 낮은 순으로 정렬했습니다＞
		ELSE
			SORTCHARA CFLAG:(TFLAG:2), BACK
			PRINTFORMW ＜%조사처리(TSTR:0,"가")% 높은 순으로 정렬했습니다＞
		ENDIF
	CASE 6
		IF TFLAG:1 == 1
			SORTCHARA BASE:(TFLAG:2)
			PRINTFORMW ＜%조사처리(TSTR:0,"가")% 낮은 순으로 정렬했습니다＞
		ELSE
			SORTCHARA BASE:(TFLAG:2), BACK
			PRINTFORMW ＜%조사처리(TSTR:0,"가")% 높은 순으로 정렬했습니다＞
		ENDIF
ENDSELECT
RETURN 0

;---------------------------------------------------------------------
;캐릭터 교체 · 정렬용 리스트
;---------------------------------------------------------------------
@SORT_LIST, ARGS, ARG:1
REPEAT 20
	LOCAL = GET_LIST(COUNT + ARG * 20)
	;주인공과 실종 캐릭터는 배제
	SIF LOCAL == 0
		CONTINUE
	SIF CFLAG:LOCAL:4
		CONTINUE
	;첫 번째에 선택한 캐릭터는 배제
	SIF LOCAL == ARG:1
		CONTINUE
	IF LOCAL == TARGET
		PRINT ☆
	ELSEIF LOCAL == ASSI
		PRINT ★
	ELSEIF ISASSI:LOCAL == 1
		PRINT ●
	ELSEIF CFLAG:LOCAL:1 == 2
		PRINT ○
	ELSE
		PRINT 　
	ENDIF
	CALL ARRANGE_CHARALIST, LOCAL
	CALL ARRANGE_CHARALIFE, LOCAL
	CALL ARRANGE_CHARATALENT, LOCAL
	PRINTL 
REND

