	;自室に居るLOCAL:3指定の人数分さかのぼる
	REPEAT LOCAL:3
		LOCAL:0 -= 1
		IF LOCAL:0 < 1
			BREAK
		ENDIF
		SIF CFLAG:(LOCAL:0):4 != 0
			COUNT -= 1
	REND
	SIF LOCAL:0 < 0
		LOCAL:0 = 0
	GOTO STAFFCALL_WORKSHOP_TOP
