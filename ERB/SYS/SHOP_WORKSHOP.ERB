;=======================================;
@MONEY_ENLARGE_WORKSHOP
LOCAL:0 = 5000
LOCAL:1 = FLAG:1102 + 1
LOCAL:2 = 0
LOCAL:3 = 0
LOCAL:4 = FLAG:1102
$KETA_LOOP
LOCAL:1 = LOCAL:1 / 10
LOCAL:2 += 1
SIF LOCAL:1 != 0
	GOTO KETA_LOOP
REPEAT LOCAL:4
	LOCAL:3 += LOCAL:0
REND
REPEAT LOCAL:2
	LOCAL:3 *= 2
REND
FLAG:1125 = LOCAL:3

