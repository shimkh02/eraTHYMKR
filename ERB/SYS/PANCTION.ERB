;-------------------------------------------------
@TRUECHECK(ARG, ARG:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6, ARG:7, ARG:8, ARG:9, ARG:10, ARG:11, ARG:12, ARG:13, ARG:14, ARG:15, ARG:16, ARG:17, ARG:18, ARG:19)
#FUNCTION
LOCAL = 0
FOR LOCAL:100, 0, 20
	SIF ARG:(LOCAL:100) > 0
		LOCAL ++
NEXT
RETURNF LOCAL

