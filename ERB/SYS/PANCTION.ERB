	RESULT:1 = NOWEXCHECK(TARGET, "Ｃ절정") / POWER(2, LOCAL-1)
	RESULT:2 = NOWEXCHECK(TARGET, "Ｖ절정") / POWER(2, LOCAL-1)
	RESULT:3 = NOWEXCHECK(TARGET, "Ａ절정") / POWER(2, LOCAL-1)
