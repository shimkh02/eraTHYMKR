;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
;에이키 님 전용의 파생 수치 플레이.
@COM650
PRINTL 정파리경(浄玻璃の鏡)
TSTR:0 = 정파리경
SELECTCOM = 650
CALL TRAIN_MESSAGE_COM650

;거울세트
;종료시는 수정 없음
IF TEQUIP:56
	TEQUIP:56 = 0
	RETURN 1
ENDIF

DOWNBASE:0 += 0
DOWNBASE:1 += 250

LOCAL:1 = 500
LOCAL:2 = 500

;PALAM:욕정을 본다
IF PALAM:13 < PALAMLV:1
	TIMES LOCAL:1 , 1.00
ELSEIF PALAM:13 < PALAMLV:2
	TIMES LOCAL:1 , 1.10
ELSEIF PALAM:13 < PALAMLV:3
	TIMES LOCAL:1 , 1.20
ELSEIF PALAM:13 < PALAMLV:4
	TIMES LOCAL:1 , 1.30
ELSE
	TIMES LOCAL:1 , 1.40
ENDIF

;ABL:노출벽을 본다
IF ABL:14 == 0
	SOURCE:24 += 0
	SOURCE:19 += 0
	SOURCE:22 += 600
	SOURCE:31 += 1000
	SOURCE:32 += 1000
	TIMES LOCAL:1, 0.60
ELSEIF ABL:14 == 1
	SOURCE:24 += 150
	SOURCE:19 += 150
	SOURCE:22 += 500
	TIMES LOCAL:1, 1.00
ELSEIF ABL:14 == 2
	SOURCE:24 += 300
	SOURCE:19 += 300
	SOURCE:22 += 400
	TIMES LOCAL:1, 1.60
ELSEIF ABL:14 == 3
	SOURCE:24 += 600
	SOURCE:19 += 600
	SOURCE:22 += 300
	TIMES LOCAL:1, 2.00
ELSEIF ABL:14 == 4
	SOURCE:24 += 1000
	SOURCE:19 += 1000
	SOURCE:22 += 200
	TIMES LOCAL:1, 2.60
ELSE
	SOURCE:24 += 1800
	SOURCE:19 += 1800
	SOURCE:22 += 100
	TIMES LOCAL:1, 3.80
ENDIF
;ABL:마조끼를 본다
IF ABL:21 == 0
	TIMES LOCAL:1 , 1.00
ELSEIF ABL:21 == 1
	TIMES LOCAL:1 , 1.20
ELSEIF ABL:21 == 2
	TIMES LOCAL:1 , 1.40
ELSEIF ABL:21 == 3
	TIMES LOCAL:1 , 1.60
ELSEIF ABL:21 == 4
	TIMES LOCAL:1 , 1.80
ELSE
	TIMES LOCAL:1 , 2.00
ENDIF

;무관심
SIF TALENT:21
	TIMES LOCAL:1 , 0.80
;감정결여
SIF TALENT:22
	TIMES LOCAL:1 , 0.80
;호기심
SIF TALENT:23
	TIMES LOCAL:1 , 2.50
;해방
SIF TALENT:33
	TIMES LOCAL:1 , 1.50
;부끄럼쟁이
SIF TALENT:35
	TIMES LOCAL:2 , 3.00
;도착적
IF TALENT:80
	TIMES LOCAL:1 , 1.50
	TIMES LOCAL:2 , 1.20
ENDIF
;매력
IF TALENT:90
	SOURCE:11 += 500
	SOURCE:17 += 500
	TIMES LOCAL:1 , 1.50
	TIMES LOCAL:2 , 1.20
ENDIF

SOURCE:28 += (LOCAL:1 *3) / 2
SOURCE:25 += (LOCAL:2 *3) / 2

;겁쟁이
SIF TALENT:10
	TIMES LOCAL:2 , 1.50

SOURCE:12 += (LOCAL:1 *3) / 2
SOURCE:31 += LOCAL:2
SOURCE:17 += LOCAL:1 / 3

TEQUIP:56 = 2
RETURN 1

