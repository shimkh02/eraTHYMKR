	LOCAL = 60
ELSEIF ABL:21 == 1
	LOCAL = 180
ELSEIF ABL:21 == 2
	LOCAL = 300
ELSEIF ABL:21 == 3
	LOCAL = 480
ELSEIF ABL:21 == 4
	LOCAL = 700
ELSE
	LOCAL = 850
ENDIF

;도착적
SIF TALENT:80
	TIMES LOCAL , 2.00

;PALAM:욕정을 본다
IF PALAM:13 < PALAMLV:1
	TIMES LOCAL , 0.80
ELSEIF PALAM:13 < PALAMLV:2
	TIMES LOCAL , 0.90
ELSEIF PALAM:13 < PALAMLV:3
	TIMES LOCAL , 1.00
ELSEIF PALAM:13 < PALAMLV:4
	TIMES LOCAL , 1.10
ELSE
	TIMES LOCAL , 1.20
ENDIF

LOCAL:1 = LOCAL + 500
LOCAL:2 = LOCAL + 500
LOCAL:3 = 400
IF FLAG:1100 & 1
	;技師パッチ有効なら道具使用時ソースチェックを呼ぶ
	;FLAG 1110:道具番号 1111:改善タイプ 1112:SOURCEの実値 
	FLAG:1110 = 29
	FLAG:1111 = 1
	FLAG:1112 = LOCAL
	CALL SOURCECHECK_CUSTOMTOOL
	LOCAL = FLAG:1120
	FLAG:1112 = LOCAL:1
	CALL SOURCECHECK_CUSTOMTOOL
	LOCAL:1 = FLAG:1120
	FLAG:1111 = 2
	FLAG:1112 = LOCAL:3
	CALL SOURCECHECK_CUSTOMTOOL
	LOCAL:3 = FLAG:1120
ENDIF

SOURCE:20 += LOCAL:3
SOURCE:12 += LOCAL
SOURCE:22 += LOCAL:1
SOURCE:31 += LOCAL:2

IF TALENT:120 == 0 && TALENT:PLAYER:120 == 0
	TCVAR:12 += 1
ELSEIF TALENT:120 && TALENT:PLAYER:120
	TCVAR:13 += 1
ENDIF

TCVAR:31 += 2
;촉수 경험 플래그
SIF TEQUIP:90
	TFLAG:90 += 1

RETURN 1

