@COM623
PRINTL 귀갑 묶기
TSTR:0 = 귀갑 묶기
SELECTCOM = 623
CALL TRAIN_MESSAGE_COM623

;-------------------------------------------------
;소스의 계산
;-------------------------------------------------
;긴박 경험이 높으면 소비 감소
IF EXP:31 < EXPLV:3
	DOWNBASE:0 += 130
	DOWNBASE:1 += 100
ELSEIF EXP:31 < EXPLV:4
	DOWNBASE:0 += 100
	DOWNBASE:1 += 80
ELSE
	DOWNBASE:0 += 70
	DOWNBASE:1 += 50
ENDIF

LOCAL:1 = 250
;PALAM:욕정을 본다
IF PALAM:13 < PALAMLV:1
	TIMES LOCAL:1 , 0.80
ELSEIF PALAM:13 < PALAMLV:2
	TIMES LOCAL:1 , 0.90
ELSEIF PALAM:13 < PALAMLV:3
	TIMES LOCAL:1 , 1.00
ELSEIF PALAM:13 < PALAMLV:4
	TIMES LOCAL:1 , 1.10
ELSE
	TIMES LOCAL:1 , 1.20
ENDIF

;ABL:순종을 본다
IF ABL:10 == 0
	TIMES LOCAL:1 , 0.40
ELSEIF ABL:10 == 1
	TIMES LOCAL:1 , 0.60
ELSEIF ABL:10 == 2
	TIMES LOCAL:1 , 0.80
ELSEIF ABL:10 == 3
	TIMES LOCAL:1 , 1.00
ELSEIF ABL:10 == 4
	TIMES LOCAL:1 , 1.10
ELSE
	TIMES LOCAL:1 , 1.20
ENDIF
;ABL:마조끼를 본다
IF ABL:21 == 0
	TIMES LOCAL:1 , 0.80
ELSEIF ABL:21 == 1
	TIMES LOCAL:1 , 1.00
ELSEIF ABL:21 == 2
	TIMES LOCAL:1 , 1.30
ELSEIF ABL:21 == 3
	TIMES LOCAL:1 , 1.60
ELSEIF ABL:21 == 4
	TIMES LOCAL:1 , 2.00
ELSE
	TIMES LOCAL:1 , 3.00
ENDIF

;도착적
SIF TALENT:80
	TIMES LOCAL:1 , 2.00

SOURCE:20 = 500
SOURCE:12 = 800
SOURCE:22 = 900
SOURCE:31 = 600 + LOCAL:1
SOURCE:23 = 200 + LOCAL:1

IF FLAG:1100 & 1
	;技師パッチ有効なら道具使用時ソースチェックを呼ぶ
	;FLAG 1110:道具番号 1111:改善タイプ 1112:SOURCEの実値 
	FLAG:1110 = 29
	;ここまでにNAMECHECKしてないため開発者未定。代わりにCHECK_DEALER_CUSTOMTOOLを呼ぶ
	CALL CHECK_DEALER_CUSTOMTOOL
	FLAG:1111 = 1
	FLAG:1112 = SOURCE:12
	CALL SOURCECHECK_CUSTOMTOOL
	SOURCE:12 = FLAG:1120
	FLAG:1112 = SOURCE:22
	CALL SOURCECHECK_CUSTOMTOOL
	SOURCE:22 = FLAG:1120
	FLAG:1112 = SOURCE:23
	CALL SOURCECHECK_CUSTOMTOOL
	SOURCE:23 = FLAG:1120
	FLAG:1111 = 2
	FLAG:1112 = SOURCE:20
	CALL SOURCECHECK_CUSTOMTOOL
	SOURCE:20 = FLAG:1120
ENDIF

TCVAR:31 += 3

;SM교육 경험 플래그
SIF ASSIPLAY
	TFLAG:55 = 3

;줄의 착탈
TEQUIP:40 = 3
RETURN 1

