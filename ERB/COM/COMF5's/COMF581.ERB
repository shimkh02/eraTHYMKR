SIF TEQUIP:90 == 0
	RETURN 0
;해제는 언제든 가능
SIF TEQUIP:95 & 1
	RETURN 1
;조교자는 촉수사역LV3이상 필요
SIF ABL:PLAYER:98 < 3
	RETURN 0
;촉수가 [NITORI촉수]を得ていないとダメ
SIF (FLAG:98 & 2) == 0
	RETURN 0
