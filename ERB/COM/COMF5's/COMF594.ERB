;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
;촉수생지를 통해서 하반신이 촉수와 일체화한 정엽을 소환,
;모부인 보고 싶고 의욕손으로 엉덩이에 빨강과 파랑의 단풍을 붙여 간다……라고 하는 발광 탄막적인 플레이
@COM594
PRINTL 촉수백렬단풍
TSTR:0 = 촉수백렬단풍
CALL TRAIN_MESSAGE_COM594

DOWNBASE:0 += 20
DOWNBASE:1 += 50

;PALAM:고통을 본다
IF PALAM:16 < PALAMLV:1
	LOCAL:1 = 50
ELSEIF PALAM:16 < PALAMLV:2
	LOCAL:1 = 100
ELSEIF PALAM:16 < PALAMLV:3
	LOCAL:1 = 200
ELSEIF PALAM:16 < PALAMLV:4
	LOCAL:1 = 400
ELSEIF PALAM:16 < PALAMLV:5
	LOCAL:1 = 600
ELSE
	LOCAL:1 = 800
ENDIF

;ABL:마조끼를 본다
IF ABL:21 == 0
	TIMES LOCAL:1 , 1.80
	LOCAL:2 = 4200
	LOCAL:3 = 0
ELSEIF ABL:21 == 1
	TIMES LOCAL:1 , 1.50
	LOCAL:2 = 3600
	LOCAL:3 = 10
ELSEIF ABL:21 == 2
	TIMES LOCAL:1 , 1.20
	LOCAL:2 = 2800
	LOCAL:3 = 25
ELSEIF ABL:21 == 3
	LOCAL:2 = 2000
	LOCAL:3 = 50
ELSEIF ABL:21 == 4
	TIMES LOCAL:1 , 0.80
	LOCAL:2 = 1200
	LOCAL:3 = 75
ELSE
	TIMES LOCAL:1 , 0.60
	LOCAL:2 = 800
	LOCAL:3 = 150
ENDIF

;ABL:촉수 중독을 본다
IF ABL:35 == 0
	TIMES LOCAL:2 , 1.50
	TIMES LOCAL:3 , 0.00
ELSEIF ABL:35 == 1
	TIMES LOCAL:2 , 1.20
	TIMES LOCAL:3 , 0.50
ELSEIF ABL:35 == 2
	TIMES LOCAL:2 , 1.00
	TIMES LOCAL:3 , 0.80
ELSEIF ABL:35 == 3
	TIMES LOCAL:2 , 0.80
	TIMES LOCAL:3 , 1.00
ELSEIF ABL:35 == 4
	TIMES LOCAL:2 , 0.60
	TIMES LOCAL:3 , 1.50
ELSE
	TIMES LOCAL:2 , 0.50
	TIMES LOCAL:3 , 2.10
ENDIF

;도착적
SIF TALENT:80
	TIMES LOCAL:2 , 1.20
;작은 몸집 체형
SIF TALENT:128
	TIMES LOCAL:1 , 2.50

LOCAL:4 = (LOCAL:1 + LOCAL:2 + 1000) / 3

;정엽과의 궁합 있고 없음으로 보정이 상하
LOCAL:5 = 37
IF RELATION:(LOCAL:5) > 0 && RELATION:(LOCAL:5) != 100
	LOCAL:1 *= RELATION:(LOCAL:5)
	LOCAL:1 /= 100
	LOCAL:2 *= RELATION:(LOCAL:5)
	LOCAL:2 /= 100
	LOCAL:3 *= RELATION:(LOCAL:5)
	LOCAL:3 /= 100
	;트라우마는 강제적으로 증가
	IF RELATION:(LOCAL:5) < 100
		LOCAL:4 *= (200-RELATION:(LOCAL:5))
	ELSE
		LOCAL:4 *= RELATION:(LOCAL:5)
	ENDIF
	LOCAL:4 /= 100
ENDIF

SOURCE:20 += LOCAL:1
SOURCE:25 += LOCAL:4
SOURCE:28 += LOCAL:3
SOURCE:31 += LOCAL:2

;촉수백렬단풍의 ON/OFF
IF TEQUIP:95 & 128
	TEQUIP:95 -= 128
ELSE
	TEQUIP:95 |= 128
ENDIF

;커맨드 속성：촉수
TFLAG:98 = 8
;촉수 경험 플래그
TFLAG:90 = 0
RETURN 1

