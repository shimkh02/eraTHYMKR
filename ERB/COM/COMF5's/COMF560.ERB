	TIMES LOCAL , 1.50
	TIMES LOCAL:1 , 1.00
ELSE
	TIMES LOCAL:1 , 1.80
	TIMES LOCAL:1 , 0.80
ENDIF

;ABL:촉수 중독을 본다
IF ABL:35 == 0
	LOCAL:2 = 0
	TIMES LOCAL:1 , 1.50
ELSEIF ABL:35 == 1
	LOCAL:2 = 5
	TIMES LOCAL:1 , 1.20
ELSEIF ABL:35 == 2
	LOCAL:2 = 20
	TIMES LOCAL:1 , 0.90
ELSEIF ABL:35 == 3
	LOCAL:2 = 80
	TIMES LOCAL:1 , 0.60
ELSEIF ABL:35 == 4
	LOCAL:2 = 300
	TIMES LOCAL:1 , 0.30
ELSE
	LOCAL:2 = 1000
	TIMES LOCAL:1 , 0.10
ENDIF

;약에 들어 있는 독 내성
SIF TALENT:44
	TIMES LOCAL , 0.40
;중독 하기 쉽다
SIF TALENT:84
	TIMES LOCAL , 1.10
;회복 빠르다
IF TALENT:137
	TIMES LOCAL , 1.30
;회복 늦다
ELSEIF TALENT:138
	TIMES LOCAL , 0.75
ENDIF
;기계
SIF TALENT:206
	TIMES LOCAL , 0.20

;기생(영양이 일부 놓치고 있으므로)
SIF TALENT:146
	TIMES LOCAL , 0.70

LOCAL:3 = LOCAL
SIF LOCAL:3 + BASE:0 > MAXBASE:0
	LOCAL:3 = MAXBASE:0 - BASE:0
BASE:0 = MIN(BASE:0 + LOCAL:3, MAXBASE:0)
PRINTFORML 체력+{LOCAL:3} 
LOCAL:3 = LOCAL/2
SIF LOCAL:3 + BASE:1 > MAXBASE:1
	LOCAL:3 = MAXBASE:1 - BASE:1
BASE:1 = MIN(BASE:1 + LOCAL:3, MAXBASE:1)
PRINTFORML 기력+{LOCAL:3} 

SOURCE:25 += LOCAL:1 * 2
SOURCE:23 += (LOCAL:1 + LOCAL:2) / 4
SOURCE:24 += LOCAL:2
SOURCE:26 += LOCAL:2 / 5
SOURCE:30 += LOCAL + LOCAL:1
SOURCE:31 += LOCAL:1 * 2
SOURCE:32 += LOCAL:1 / 5

;약물 경험
TCVAR:40 += 1

LOCAL:4 = LOCAL/5
;조교자가 작은 몸집 체형·소인 체형이라면 소모가 크다
SIF TALENT:PLAYER:127 || TALENT:PLAYER:128
	TIMES LOCAL:4 , 1.20
SIF LOCAL:4 >= BASE:PLAYER:0
	LOCAL:4 = BASE:PLAYER:0 - 1
;조교자의 체력을 양식으로 하고 있다
BASE:PLAYER:0 -= LOCAL:4
SIF BASE:PLAYER:0 < 500
	CALL TRAIN_EVENT_COM560
;촉수 경험 플래그
TFLAG:90 /= 2
RETURN 1

;--------------------------------------------------
;체력 조각의 처리
;--------------------------------------------------
@TRAIN_EVENT_COM560
IF ASSIPLAY
	PRINTFORML %CALLNAME:ASSI%의 다리가 휘청휘청하고 있다.
ELSE
	PRINTL 조금 다리가 휘청거린다.
ENDIF
PRINTL 더 이상 계속하지 않는 게 좋을 것 같다….
TEQUIP:91 = 0

