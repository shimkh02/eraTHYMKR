;촉수 강제 회복
;=============================================================================
;………………………………………………
;실행 판정
;………………………………………………
@COM_ABLE560
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:560 > 0
	RETURN 0
;신사적인 촉수계 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 4096) == 0
	RETURN 0
;아이템進化の秘法を持っているか, 아이템なし設定でないとダメ
SIF ITEM:59 == 0 && NOITEM == 0
	RETURN 0
;촉수調教中じゃないとはダメ
SIF TEQUIP:90 == 0
	RETURN 0
;조교자는 촉수사역LV5이상 필요
SIF ABL:PLAYER:98 < 5
	RETURN 0
;촉수가 [養分注入촉수]を得ていないとダメ
SIF (FLAG:75 & 32) == 0
	RETURN 0
;해제는 언제든 가능
SIF TEQUIP:91
	RETURN 1
;조교자의 기력または체력이 1000이하だとダメ
SIF BASE:PLAYER:0 < 1000 || BASE:PLAYER:1 < 1000
	RETURN 0
;奴隷の체력이 最大だとダメ
SIF BASE:0 >= MAXBASE:0
	RETURN 0
;기교가 4이상 없으면 안 됨
SIF ABL:PLAYER:12 < 4
	RETURN 0
;ボールギャグ使用中及び촉수貫通中は촉수가 [針状촉수]을 갖고 있지 않으면 불가
IF TEQUIP:25 == 3 || TEQUIP:42
	SIF (FLAG:75 & 2) == 0
		RETURN 0
ENDIF
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
@COM560
;말용으로 TFLAG:201을 사용. (0=사용한 시점에서 촉수 관통, 구욕은 아닌, 1=사용한 시점에서 촉수 관통중, 2=사용한 시점에서 촉수구욕중, 3=사용한 시점에서 촉수 관통중 또한 촉수구욕중)
PRINTL 촉수 강제 회복
TSTR:0 = 촉수 강제 회복

;말용
TFLAG:201 = 0
IF TEQUIP:25 == 3 && TEQUIP:42 == 2
	;촉수 관통＋촉수구욕
	TFLAG:201 = 3
ELSEIF TEQUIP:25 == 3
	;촉수 관통만
	TFLAG:201 = 1
ELSEIF TEQUIP:42 == 2
	;촉수구욕 마셔
	TFLAG:201 = 2
ENDIF
CALL TRAIN_MESSAGE_COM560

;촉수 강제 회복 해제
IF TEQUIP:91
	TEQUIP:91 = 0
	;촉수 경험 플래그
	TFLAG:90 = 0
	RETURN 1
ENDIF

;촉수 강제 회복
IF TEQUIP:25 == 3 || TEQUIP:42 == 1
	TEQUIP:91 = 2
ELSEIF TEQUIP:42 == 2
	TEQUIP:42 = 0
	TEQUIP:91 = 1
ELSE
	TEQUIP:91 = 1
ENDIF

LOCAL:1 = 100
LOCAL:2 = 500

;EXP:촉수 경험을 본다
IF EXP:53 < EXPLV:1
	TIMES LOCAL:1 , 0.80
	TIMES LOCAL:2 , 3.00
	SOURCE:25 += 2000
ELSEIF EXP:53 < EXPLV:2
	TIMES LOCAL:2 , 2.50
	SOURCE:25 += 1000
ELSEIF EXP:53 < EXPLV:3
	TIMES LOCAL:1 , 1.10
	TIMES LOCAL:2 , 2.00
	SOURCE:25 += 100
ELSEIF EXP:53 < EXPLV:4
	TIMES LOCAL:1 , 1.30
	TIMES LOCAL:2 , 1.50
ELSEIF EXP:53 < EXPLV:5
	TIMES LOCAL:1 , 1.50
	TIMES LOCAL:2 , 1.00
ELSE
	TIMES LOCAL:1 , 1.80
	TIMES LOCAL:2 , 0.80
ENDIF

;ABL:촉수 중독을 본다
IF ABL:35 == 0
	LOCAL:3 = 0
	TIMES LOCAL:2 , 1.50
ELSEIF ABL:35 == 1
	LOCAL:3 = 5
	TIMES LOCAL:2 , 1.20
ELSEIF ABL:35 == 2
	LOCAL:3 = 20
	TIMES LOCAL:2 , 0.90
ELSEIF ABL:35 == 3
	LOCAL:3 = 80
	TIMES LOCAL:2 , 0.60
ELSEIF ABL:35 == 4
	LOCAL:3 = 300
	TIMES LOCAL:2 , 0.30
ELSE
	LOCAL:3 = 1000
	TIMES LOCAL:2 , 0.10
ENDIF

;약에 들어 있는 독 내성
SIF TALENT:44
	TIMES LOCAL:1 , 0.40
;중독 하기 쉽다
SIF TALENT:84
	TIMES LOCAL:1 , 1.10
;회복 빠르다
IF TALENT:137
	TIMES LOCAL:1 , 1.30
;회복 늦다
ELSEIF TALENT:138
	TIMES LOCAL:1 , 0.75
ENDIF
;기계
SIF TALENT:206
	TIMES LOCAL:1 , 0.20

LOCAL:4 = LOCAL:1 /4
;조교자가 작은 몸집 체형·소인 체형이라면 소모가 크다
SIF TALENT:127 || TALENT:128
	TIMES LOCAL:4 , 1.20
SIF LOCAL:4 >= BASE:PLAYER:0
	LOCAL:4 = BASE:PLAYER:0 - 1
;조교자의 체력을 양식으로 하고 있다
BASE:PLAYER:0 -= LOCAL:4
PRINTFORML %조사선택(CALLNAME:TARGET, "를")% 회복하기 위해 %조사선택(CALLNAME:PLAYER, "는")% 자신의 체력을 희생했다.
SIF BASE:PLAYER:0 < 500
	CALL TRAIN_EVENT_COM560

;기생(영양이 일부 놓치고 있으므로)
SIF TALENT:146
	TIMES LOCAL:1 , 0.70

LOCAL:4 = LOCAL:1
SIF LOCAL:4 + BASE:0 > MAXBASE:0
	LOCAL:4 = MAXBASE:0 - BASE:0
BASE:0 = MIN(BASE:0 + LOCAL:4, MAXBASE:0)
PRINTFORML 체력+{LOCAL:4} 
LOCAL:4 = LOCAL:1 /2
SIF LOCAL:4 + BASE:1 > MAXBASE:1
	LOCAL:4 = MAXBASE:1 - BASE:1
BASE:1 = MIN(BASE:1 + LOCAL:4, MAXBASE:1)
PRINTFORML 기력+{LOCAL:4} 

SOURCE:25 += LOCAL:2 * 2
SOURCE:24 += LOCAL:3
SOURCE:30 += LOCAL:1 + LOCAL:2
SOURCE:31 += LOCAL:2 * 2
SOURCE:32 += LOCAL:2
SOURCE:23 += (LOCAL:2 + LOCAL:3) / 2

IF TEQUIP:25 == 3 || TEQUIP:42 == 1
	STAIN:1 |= 2
	STAIN:1 |= 64
ELSE
	STAIN:0 |= 2
	STAIN:0 |= 64
ENDIF

;커맨드 속성：촉수
TFLAG:98 = 8
;촉수 경험 플래그
TFLAG:90 = 1
RETURN 1

;--------------------------------------------------
;촉수 강제 회복중
;--------------------------------------------------
@EQUIP_COM560
PRINTL <촉수 강제 회복 중>
SIF SELECTCOM != 560
	CALL EQUIP_MESSAGE_COM560

LOCAL = 250
LOCAL:1 = 300

;EXP:촉수 경험을 본다
IF EXP:53 < EXPLV:1
	TIMES LOCAL , 0.90
	TIMES LOCAL:1 , 3.00
ELSEIF EXP:53 < EXPLV:2
	TIMES LOCAL , 1.00
	TIMES LOCAL:1 , 2.50
