@COM_ABLE553
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:553 > 0
	RETURN 0
;신사적인 촉수계 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 4096) == 0
	RETURN 0
;이상계 조교 필터가 오프되어 있지 않으면 불가
SIF FLAG:2 & 4
	RETURN 0
;아이템進化の秘法を持っているか, 아이템なし設定でないとダメ
SIF ITEM:59 == 0 && NOITEM == 0
	RETURN 0
;촉수조교 중이 아니면 불가
SIF TEQUIP:90 == 0
	RETURN 0
;촉수가 [放電촉수]を得ていないとダメ
SIF (FLAG:75 & 4) == 0
	RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
@COM553
PRINTL 촉수 방전
TSTR:0 = 촉수 방전
CALL TRAIN_MESSAGE_COM553

DOWNBASE:0 += 20
DOWNBASE:1 += 50

;PALAM:고통을 본다
IF PALAM:16 < PALAMLV:1
	SOURCE:20 = 2000
ELSEIF PALAM:16 < PALAMLV:2
	SOURCE:20 = 2500
ELSEIF PALAM:16 < PALAMLV:3
	SOURCE:20 = 2800
ELSEIF PALAM:16 < PALAMLV:4
	SOURCE:20 = 3000
ELSEIF PALAM:16 < PALAMLV:5
	SOURCE:20 = 3300
ELSE
	SOURCE:20 = 3600
ENDIF

LOCAL:1 = 1000

;ABL:마조끼를 본다
IF ABL:21 == 0
	TIMES LOCAL:1 , 1.80
	LOCAL:2 = 5000
ELSEIF ABL:21 == 1
	TIMES LOCAL:1 , 1.50
	LOCAL:2 = 3000
ELSEIF ABL:21 == 2
	TIMES LOCAL:1 , 1.20
	LOCAL:2 = 2000
ELSEIF ABL:21 == 3
	LOCAL:2 = 1000
ELSEIF ABL:21 == 4
	TIMES LOCAL:1 , 0.80
	LOCAL:2 = 500
ELSE
	TIMES LOCAL:1 , 0.60
	LOCAL:2 = 200
ENDIF

;ABL:촉수 중독을 본다
IF ABL:35 == 0
	TIMES LOCAL:2 , 1.50
	LOCAL:3 = 0
ELSEIF ABL:35 == 1
	TIMES LOCAL:2 , 1.20
	LOCAL:3 = 10
ELSEIF ABL:35 == 2
	LOCAL:3 = 30
ELSEIF ABL:35 == 3
	TIMES LOCAL:2 , 0.80
	LOCAL:3 = 60
ELSEIF ABL:35 == 4
	TIMES LOCAL:2 , 0.60
	LOCAL:3 = 100
ELSE
	TIMES LOCAL:2 , 0.50
	LOCAL:3 = 250
ENDIF

SOURCE:24 = LOCAL:3
SOURCE:25 = (LOCAL:1 + LOCAL:2) / 2
SOURCE:31 = LOCAL:2

;커맨드 속성：촉수
TFLAG:98 = 8
;촉수 경험 플래그
TFLAG:90 = 1
RETURN 1

