@COM_ABLE593
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:593 > 0
	RETURN 0
;신사적인 촉수계 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 4096) == 0
	RETURN 0
;캐릭터 전용 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 16384) == 0
	RETURN 0
;아이템進化の秘法を持っているか, 아이템なし設定でないとダメ
SIF ITEM:59 == 0 && NOITEM == 0
	RETURN 0
;촉수조교 중이 아니면 불가
SIF TEQUIP:90 == 0
	RETURN 0
;해제는 언제든 가능
SIF TEQUIP:95 & 64
	RETURN 1
;조교자는 촉수사역LV3이상 필요
SIF ABL:PLAYER:98 < 3
	RETURN 0
;촉수가 [EIKI촉수]を得ていないとダメ
SIF (FLAG:98 & 8192) == 0
	RETURN 0
;에이키 님を촉수生贄に捧げていない(=에이키 님が何らかの形で存在している)とダメ
SIF (FLAG:97 & 8192) == 0
	RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
;촉수생지를 통해서 촉수와 일체화한 에이키 님을 소환해,
;일방적으로 죄를 올려 오로지 규탄받는다……라고 하는 초카오스인 플레이
@COM593
PRINTL 촉수 최종 심판
TSTR:0 = 촉수 최종 심판
CALL TRAIN_MESSAGE_COM593

DOWNBASE:0 += 5
DOWNBASE:1 += 66

;이전을 대고 있으면(자) 연주 날아가는 w
IF TEQUIP:45
	PRINTFORML 촉수와 일체화한 에이키 님에게서 발사된 회개의 봉형의 촉수탄이 %CALLNAME:TARGET%의 귀마개를 맞춰 날렸다….
	TEQUIP:45 = 0
	SOURCE:20 = 200
	SOURCE:32 = 100
ENDIF

;ABL:순종을 본다
IF ABL:10 == 0
	LOCAL:1 = 600
	LOCAL:2 = 200
	LOCAL:3 = 300
ELSEIF ABL:10 == 1
	LOCAL:1 = 300
	LOCAL:2 = 200
	LOCAL:3 = 150
ELSEIF ABL:10 == 2
	LOCAL:1 = 240
	LOCAL:2 = 200
	LOCAL:3 = 120
ELSEIF ABL:10 == 3
	LOCAL:1 = 180
	LOCAL:2 = 200
	LOCAL:3 = 90
ELSEIF ABL:10 == 4
	LOCAL:1 = 120
	LOCAL:2 = 200
	LOCAL:3 = 60
ELSE
	LOCAL:1 = 60
	LOCAL:2 = 200
	LOCAL:3 = 30
ENDIF

;ABL:촉수 중독을 본다
LOCAL:4 = 200 * (6 - ABL:35)

;에이키 님과의 궁합 있고 없음으로 보정이 상하
LOCAL:5 = 36
IF RELATION:(LOCAL:5) > 0 && RELATION:(LOCAL:5) != 100
	LOCAL:1 *= RELATION:(LOCAL:5)
	LOCAL:1 /= 100
	LOCAL:2 *= RELATION:(LOCAL:5)
	LOCAL:2 /= 100
	LOCAL:3 *= RELATION:(LOCAL:5)
	LOCAL:3 /= 100
	LOCAL:4 *= RELATION:(LOCAL:5)
	LOCAL:4 /= 100
ENDIF

SOURCE:17 += LOCAL:1
SOURCE:22 += LOCAL:2
SOURCE:25 += LOCAL:3
SOURCE:31 += LOCAL:4

IF TEQUIP:95 & 64
	TEQUIP:95 -= 64
ELSE
	TEQUIP:95 |= 64
ENDIF

;커맨드 속성：촉수
TFLAG:98 = 8
;촉수 경험 플래그
TFLAG:90 = 0
RETURN 1

