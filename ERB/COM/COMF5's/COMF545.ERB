	TIMES LOCAL:1 , 0.90
	LOCAL:2 = 60
ELSEIF ABL:35 == 2
	TIMES LOCAL:1 , 0.80
	LOCAL:2 = 110
ELSEIF ABL:35 == 3
	TIMES LOCAL:1 , 0.70
	LOCAL:2 = 150
ELSEIF ABL:35 == 4
	TIMES LOCAL:1 , 0.60
	LOCAL:2 = 190
ELSE
	TIMES LOCAL:1 , 0.50
	LOCAL:2 = 250
ENDIF

DOWNBASE:0 += LOCAL:1
DOWNBASE:1 += LOCAL:1 *3

;-------------------------------------------------
;소스의 계산
;-------------------------------------------------

SOURCE:15 = 80
SOURCE:16 = LOCAL:2
SOURCE:30 = 200
SOURCE:19 = 600
SOURCE:31 = 2000
SOURCE:23 = 1000

;ABL:마조끼를 본다
IF ABL:21 == 0
	TIMES SOURCE:15 , 0.50
	TIMES SOURCE:16 , 0.50
ELSEIF ABL:21 == 1
	TIMES SOURCE:15 , 0.80
	TIMES SOURCE:16 , 0.80
ELSEIF ABL:21 == 2
	TIMES SOURCE:15 , 1.00
	TIMES SOURCE:16 , 1.00
ELSEIF ABL:21 == 3
	TIMES SOURCE:15 , 1.20
	TIMES SOURCE:16 , 1.20
ELSEIF ABL:21 == 4
	TIMES SOURCE:15 , 1.50
	TIMES SOURCE:16 , 1.50
ELSE
	TIMES SOURCE:15 , 2.00
	TIMES SOURCE:16 , 2.00
ENDIF

SOURCE:22 = LOCAL:2
SOURCE:17 = LOCAL:2

;커맨드 속성：촉수
TFLAG:98 = 8
;촉수 경험 플래그
TFLAG:90 = 1
RETURN 1

