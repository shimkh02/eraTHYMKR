	LOCAL:1 = 200
	LOCAL:2 = 500
	LOCAL:3 = 1500
ELSEIF ABL:21 == 1
	LOCAL:1 = 400
	LOCAL:2 = 700
	LOCAL:3 = 1000
ELSEIF ABL:21 == 2
	LOCAL:1 = 600
	LOCAL:2 = 900
	LOCAL:3 = 500
ELSEIF ABL:21 == 3
	LOCAL:1 = 800
	LOCAL:2 = 1300
	LOCAL:3 = 250
ELSEIF ABL:21 == 4
	LOCAL:1 = 1000
	LOCAL:2 = 1500
	LOCAL:3 = 100
ELSE
	LOCAL:1 = 1200
	LOCAL:2 = 1800
	LOCAL:3 = 50
ENDIF

;파르스와의 궁합 있고 없음으로 보정이 상하
LOCAL:4 = 59
IF RELATION:(LOCAL:4) > 0 && RELATION:(LOCAL:4) != 100
	LOCAL:1 *= RELATION:(LOCAL:4)
	LOCAL:1 /= 100
	LOCAL:2 *= RELATION:(LOCAL:4)
	LOCAL:2 /= 100
	LOCAL:3 *= RELATION:(LOCAL:4)
	LOCAL:3 /= 100
ENDIF

SOURCE:12 = LOCAL:1
SOURCE:22 = LOCAL:2
SOURCE:25 = (LOCAL:1 + LOCAL:2)/2
SOURCE:31 = LOCAL:3

IF TEQUIP:95 & 4
	TEQUIP:95 -= 4
ELSE
	TEQUIP:95 |= 4
ENDIF

;커맨드 속성：촉수
TFLAG:98 = 8
