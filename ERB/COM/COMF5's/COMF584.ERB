@COM_ABLE584
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:584 > 0
	RETURN 0
;신사적인 촉수계 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 4096) == 0
	RETURN 0
;캐릭터 전용 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 16384) == 0
	RETURN 0
;아이템進化の秘法を持っているか, 아이템なし設定でないとダメ
SIF ITEM:59 == 0 && NOITEM == 0
	RETURN 0
;촉수조교 중이 아니면 불가
SIF TEQUIP:90 == 0
	RETURN 0
;해제는 언제든 가능
SIF TEQUIP:77 == 2
	RETURN 1
;조교자는 촉수사역LV3이상 필요
SIF ABL:PLAYER:98 < 3
	RETURN 0
;촉수가 [ALICE촉수]を得ていないとダメ
SIF (FLAG:98 & 16) == 0
	RETURN 0
;アリスを촉수生贄に捧げていない(=アリスが何らかの形で存在している)とダメ
SIF (FLAG:97 & 16) == 0
	RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
;촉수생지를 통해서 촉수와 일체화한 앨리스를 소환,
;변이한 조정의 실로 상대의 마음을 조작해, 반감을 억제한다……라고 하는 초드급 변태 플레이
@COM584
PRINTL 촉수 정신 제어
TSTR:0 = 촉수 정신 제어
CALL TRAIN_MESSAGE_COM584

DOWNBASE:0 += 20
DOWNBASE:1 += 100

SOURCE:31 = 30000

;ABL:순종을 본다
IF ABL:10 == 0
	SOURCE:22 = 30
	SOURCE:23 = 20
	TIMES SOURCE:31 , 2.00
ELSEIF ABL:10 == 1
	SOURCE:22 = 80
	SOURCE:23 = 40
	TIMES SOURCE:31 , 1.50
ELSEIF ABL:10 == 2
	SOURCE:22 = 160
	SOURCE:23 = 80
	TIMES SOURCE:31 , 1.00
ELSEIF ABL:10 == 3
	SOURCE:22 = 320
	SOURCE:23 = 160
	TIMES SOURCE:31 , 0.50
ELSEIF ABL:10 == 4
	SOURCE:22 = 700
	SOURCE:23 = 320
	TIMES SOURCE:31 , 0.25
ELSE
	SOURCE:22 = 1200
	SOURCE:23 = 640
	TIMES SOURCE:31 , 0.10
ENDIF

;복종
IF TALENT:160
	TIMES SOURCE:22 , 1.50
	TIMES SOURCE:23 , 1.20
	TIMES SOURCE:31 , 0.20
ENDIF

;MARK:공포 각인을 본다
IF MARK:8 == 1
	TIMES SOURCE:23 , 1.20
ELSEIF MARK:8 == 2
	TIMES SOURCE:23 , 1.50
ELSEIF MARK:8 >= 3
	TIMES SOURCE:23 , 2.00
ENDIF

;MARK:반발 각인을 본다
IF MARK:9 == 1
	TIMES SOURCE:31 , 0.50
ELSEIF MARK:9 == 2
	TIMES SOURCE:31 , 0.25
ELSEIF MARK:9 >= 3
	TIMES SOURCE:31 , 0.10
ENDIF

IF TEQUIP:77 == 2
	TEQUIP:77 = 0
ELSE
	TEQUIP:77 = 2
ENDIF

;커맨드 속성：촉수
TFLAG:98 = 8
;촉수 경험 플래그
TFLAG:90 = 0
RETURN 1

;-------------------------------------------------
;촉수 정신 제어중
;-------------------------------------------------
@EQUIP_COM584
PRINTL <촉수 정신 제어중>

DOWNBASE:0 += 5
DOWNBASE:1 += 10

;앨리스의 성별상, 조교 대상이♀의 때만 레즈비언 경험이 들어가는 사양에
SIF TALENT:120 == 0
	TCVAR:12 += 1

;촉수 경험 플래그
TFLAG:90 += 1
RETURN 1

