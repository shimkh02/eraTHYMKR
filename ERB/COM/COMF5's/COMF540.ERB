@COM_ABLE540
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:540 > 0
	RETURN 0
;신사적인 촉수계 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 4096) == 0
	RETURN 0
;아이템進化の秘法を持っているか, 아이템なし設定でないとダメ
SIF ITEM:59 == 0 && NOITEM == 0
	RETURN 0
;촉수조교 중이 아니면 불가
SIF TEQUIP:90 == 0
	RETURN 0
;촉수가 [特殊ホルモン分泌]を得ていないとダメ
SIF (FLAG:75 & 1024) == 0
	RETURN 0
;기계면 불가
SIF TALENT:206
	RETURN 0
;촉수強制回復中(口内)はダメ
SIF TEQUIP:91 == 1
	RETURN 0
;촉수口辱中じゃないとダメ
SIF TEQUIP:42 != 2
	RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
@COM540
PRINTL 촉수 구내 세정
TSTR:0 = 촉수구내세정
CALL TRAIN_MESSAGE_COM540

LOCAL:1 = 80
;ABL:촉수中毒をみる
IF ABL:35 == 0
	TIMES LOCAL:1 , 1.00
	LOCAL:2 = 100
ELSEIF ABL:35 == 1
	TIMES LOCAL:1 , 0.90
	LOCAL:2 = 180
ELSEIF ABL:35 == 2
	TIMES LOCAL:1 , 0.80
	LOCAL:2 = 240
ELSEIF ABL:35 == 3
	TIMES LOCAL:1 , 0.70
	LOCAL:2 = 380
ELSEIF ABL:35 == 4
	TIMES LOCAL:1 , 0.60
	LOCAL:2 = 500
ELSE
	TIMES LOCAL:1 , 0.50
	LOCAL:2 = 700
ENDIF

DOWNBASE:0 += LOCAL:1
DOWNBASE:1 += LOCAL:1 *2

;-------------------------------------------------
;소스의 계산
;-------------------------------------------------

LOCAL:3 = 0
SIF STAIN:0 & 1
	LOCAL:3 += 1
SIF STAIN:0 & 2
	LOCAL:3 += 1
SIF STAIN:0 & 4
	LOCAL:3 += 1
SIF STAIN:0 & 8
	LOCAL:3 += 1
SIF STAIN:0 & 16
	LOCAL:3 += 1

SOURCE:15 = 300
SOURCE:16 = LOCAL:2
SOURCE:30 = 3000-(500*LOCAL:3)
SOURCE:19 = 1000
SOURCE:31 = 2500
SOURCE:23 = 1500

;ABL:마조끼를 본다
IF ABL:21 == 0
	TIMES SOURCE:15 , 0.50
	TIMES SOURCE:16 , 0.50
ELSEIF ABL:21 == 1
	TIMES SOURCE:15 , 0.80
	TIMES SOURCE:16 , 0.80
ELSEIF ABL:21 == 2
	TIMES SOURCE:15 , 1.00
	TIMES SOURCE:16 , 1.00
ELSEIF ABL:21 == 3
	TIMES SOURCE:15 , 1.20
	TIMES SOURCE:16 , 1.20
ELSEIF ABL:21 == 4
	TIMES SOURCE:15 , 1.50
	TIMES SOURCE:16 , 1.50
ELSE
	TIMES SOURCE:15 , 2.00
	TIMES SOURCE:16 , 2.00
ENDIF

SOURCE:22 = LOCAL:2
SOURCE:17 = LOCAL:2

;口内의 더러움がリセット
STAIN:0 = 0

;커맨드 속성：촉수
TFLAG:98 = 8
;촉수経験フラグ
TFLAG:90 = 1
RETURN 1

