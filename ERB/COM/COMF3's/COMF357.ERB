;=============================================================================
;워터 슬라이더
;=============================================================================
;イチャイチャ専用　仲良くなると二人で滑るイメージ
;こわい　こわいほど情愛が増えるという吊り橋効果
;恐怖　　　　　　→（接触　支配　トラウマ）　消費気力ガッツリ
;水に慣れてない　→（接触　支配　トラウマ）　消費体力大
;慣れてる　　　　→達成感大 主導権
;恭順　　　　　　→接触　情愛　マイナス微減少
;恋慕以上なら愛情経験増える
;LOCAL:1		→マイナス効果基礎値（接触　支配　トラウマ）
;--------------------------------------------------
;워터 슬라이더 실행 판정
;--------------------------------------------------
@COM_ABLE357
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:357 > 0
	RETURN 0
;調教者奉仕・ウフフ系コマンドを有効にしてないとダメ
SIF (FLAG:15 & 2048) == 0
	RETURN 0
;풀장과 워터 슬라이더를 소유하고 있지 않으면 불가
SIF (FLAG:89 & 1) == 0 || (FLAG:89 & 2) == 0
	RETURN 0
;吸血鬼や動物耳には従順4がないと使用不可（プレイヤーがサドならＯＫ）
IF TALENT:205 || TALENT:116
	SIF ABL:10 < 4 && TALENT:PLAYER:81 == 0
		RETURN 0
ENDIF
;助手調教で[妄信][服従]もなく、調教対象と同性の場合、どちらかもしくは両方が脱いでいて《従順》3未満または《レズっ気》(《ＢＬっ気》)2未満だと実行できない
IF ASSIPLAY && !(TALENT:PLAYER:120 ^^ TALENT:120) && TALENT:PLAYER:151 == 0 && TALENT:PLAYER:160 == 0
	SIF ABL:PLAYER:10 < 3 || ABL:PLAYER:(22 + TALENT:120) < 2 && !(TEQUIP:59 && TEQUIP:ASSI:59)
		RETURN 0
ENDIF
;睡眠中は不可
SIF EQUIP:14
	RETURN 0
;パニック中は不可
SIF TFLAG:108 > 0
	RETURN 0
;失神中は不可
SIF TFLAG:899 > 0
	RETURN 0
;Ｖ系装着具使用中は不可
SIF TEQUIP:20 || TEQUIP:21
	RETURN 0
;Ａ系装着具使用中は不可
SIF TEQUIP:25 || TEQUIP:26
	RETURN 0
;Ｃ系装着具使用中は不可
SIF TEQUIP:30
	RETURN 0
;Ｂ系装着具使用中は不可
SIF TEQUIP:35 || TEQUIP:36
	RETURN 0
;電極使用中は不可
SIF TEQUIP:20 == 4 || TEQUIP:25 == 4 || TEQUIP:30 == 4 || TEQUIP:30 == 6 || TEQUIP:32 == 4 || TEQUIP:35 == 4
	RETURN 0
;プール中じゃないとダメ
SIF TEQUIP:53 != 2
	RETURN 0
;シャワー中はダメ
SIF TEQUIP:54
	RETURN 0
;○○風呂入浴中はダメ
SIF TEQUIP:55
	RETURN 0
;オムツプレイ中はダメ
SIF TEQUIP:58
	RETURN 0
;助手がスク水とビキニと褌以外のコスプレ中はだめ
SIF ASSIPLAY && TEQUIP:PLAYER:59 > 1 && TEQUIP:PLAYER:59 != 2 && TEQUIP:PLAYER:59 != 12 && TEQUIP:PLAYER:59 != 17
	RETURN 0
;ビキニと褌以外のコスプレ中はだめ
SIF TEQUIP:59 > 2 && TEQUIP:59 != 12 && TEQUIP:59 != 17
	RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
@COM357
PRINTL 워터 슬라이더

;-------------------------------------------------
;실행할 수 있을까의 판정
;-------------------------------------------------
IF TFLAG:699 == 0
	CALL COM_ORDER
	;실행할 수 없다
	SIF RESULT == 0
		RETURN 0
ENDIF

TSTR:0 = 워터 슬라이더
CALL TRAIN_MESSAGE_COM357

DOWNBASE:0 += 40
DOWNBASE:1 += 40

LOCAL = 300
LOCAL:1 = 100

;河童
SIF TALENT:210
	TIMES LOCAL:1 , 0.50
	TIMES DOWNBASE:0 , 0.50
	TIMES DOWNBASE:1 , 0.50
;気丈
SIF TALENT:12
	TIMES LOCAL:1 , 0.80
;吸血鬼と流水の組み合わせ…
SIF TALENT:205
	TIMES LOCAL:1 , 1.50
;PALAM:恐怖をみる
IF PALAM:17 < PALAMLV:1
	TIMES LOCAL:1 , 1.00
	TIMES DOWNBASE:1 , 1.00
ELSEIF PALAM:17 < PALAMLV:2
	TIMES LOCAL:1 , 1.10
	TIMES DOWNBASE:1 , 2.00
ELSEIF PALAM:17 < PALAMLV:3
	TIMES LOCAL:1 , 1.30
	TIMES DOWNBASE:1 , 3.00
ELSEIF PALAM:17 < PALAMLV:4
	TIMES LOCAL:1 , 1.60
	TIMES DOWNBASE:1 , 4.00
ELSE
	TIMES LOCAL:1 , 2.00
	TIMES DOWNBASE:1 , 5.00
ENDIF
;ABL:水泳技能をみる
IF ABL:74 == 0
	TIMES LOCAL , 1.00
	TIMES LOCAL:1 , 3.20
	TIMES DOWNBASE:0 , 6.00
ELSEIF ABL:74 == 1
	TIMES LOCAL , 2.00
	TIMES LOCAL:1 , 1.60
	TIMES DOWNBASE:0 , 5.00
ELSEIF ABL:74 == 2
	TIMES LOCAL , 4.00
	TIMES LOCAL:1 , 0.80
	TIMES DOWNBASE:0 , 4.00
ELSEIF ABL:74 == 3
	TIMES LOCAL , 8.00
	TIMES LOCAL:1 , 0.40
	TIMES DOWNBASE:0 , 3.00
ELSEIF ABL:74 == 4
	TIMES LOCAL , 16.00
	TIMES LOCAL:1 , 0.20
	TIMES DOWNBASE:0 , 2.00
ELSE
	TIMES LOCAL , 32.00
	TIMES LOCAL:1 , 0.10
	TIMES DOWNBASE:0 , 1.00
ENDIF

;一度代入
;恋慕なら情愛
SIF TALENT:150
	SOURCE:11 += (LOCAL + LOCAL:1)/2

;PALAM:恭順をみる
IF PALAM:12 < PALAMLV:1
	TIMES LOCAL , 1.00
	TIMES LOCAL:1 , 1.00
	TIMES SOURCE:11 , 0.10
ELSEIF PALAM:13 < PALAMLV:2
	TIMES LOCAL , 1.20
	TIMES LOCAL:1 , 0.90
	TIMES SOURCE:11 , 0.20
ELSEIF PALAM:13 < PALAMLV:3
	TIMES LOCAL , 1.30
	TIMES LOCAL:1 , 0.80
	TIMES SOURCE:11 , 0.40
ELSEIF PALAM:13 < PALAMLV:4
	TIMES LOCAL , 1.40
	TIMES LOCAL:1 , 0.70
	TIMES SOURCE:11 , 0.80
ELSE
	TIMES LOCAL , 1.50
	TIMES LOCAL:1 , 0.60
	TIMES SOURCE:11 , 1.60
ENDIF

;達成感
SOURCE:16 += LOCAL
;支配
SOURCE:23 += LOCAL:1 /2
;トラウマ
SOURCE:25 += LOCAL:1 /2

;動物耳の場合
IF TALENT:116
	TIMES SOURCE:31 , 1.60
	TIMES SOURCE:22 , 1.50
	TIMES SOURCE:32 , 2.00
ENDIF
;吸血鬼の場合
IF TALENT:205
	SOURCE:20 = 100
	TIMES SOURCE:20 , 1.60
	TIMES SOURCE:22 , 2.00
	TIMES SOURCE:32 , 1.40
ENDIF

;水泳経験　調教者が教育者なら倍
TCVAR:78 += 1 * (TALENT:PLAYER:126 + 1)

;レズBL経験
IF TALENT:120 == 0 && TALENT:PLAYER:120 == 0
	TCVAR:12 += 1
ELSEIF TALENT:120 && TALENT:PLAYER:120
	TCVAR:13 += 1
ENDIF

;泳いだから汚れがリセット
RESET_STAIN TARGET
RESET_STAIN PLAYER

;潤滑が半分
PALAM:10 /= 2
;不快はもっと減る
PALAM:21 /= 4
RETURN 1

