PRINTL 술 절이기
TSTR:0 = 술 절이기
CALL TRAIN_MESSAGE_COM423

IF TEQUIP:55 == 17
	DOWNBASE:0 += 5
	DOWNBASE:1 += 20
	SIF ABL:10 >= 3
		SOURCE:32 = 100
	TEQUIP:55 = 0
	RETURN 1
ENDIF

