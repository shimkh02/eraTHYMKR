DOWNBASE:1 += 40

SOURCE:24 = 300
SOURCE:19 = 1000

;ABL:순종을 본다
IF ABL:10 == 0
	SOURCE:32 = 500
	SOURCE:17 = 0
ELSEIF ABL:10 == 1
	SOURCE:32 = 250
	SOURCE:17 = 20
ELSEIF ABL:10 == 2
	SOURCE:32 = 100
	SOURCE:17 = 100
ELSEIF ABL:10 == 3
	SOURCE:32 = 10
	SOURCE:17 = 250
ELSEIF ABL:10 == 4
	SOURCE:32 = 5
	SOURCE:17 = 500
ELSE
	SOURCE:32 = 0
	SOURCE:17 = 800
ENDIF

