	RETURN 0
ENDIF
;対象が작은 체형か소인체형でないとダメ
SIF TALENT:127 == 0 && TALENT:128 == 0
	RETURN 0
;薬毒耐性だとダメ
SIF TALENT:44
	RETURN 0
;기계면 불가
SIF TALENT:206
	RETURN 0
;1500圓ほど掛けます
SIF MONEY < 1500
	RETURN 0
;수면 중에는 불가
SIF EQUIP:14
	RETURN 0
