	SOURCE:12 = 140
	TIMES SOURCE:32 , 0.80
	TIMES SOURCE:17 , 1.00
ELSEIF ABL:14 == 4
	SOURCE:12 = 280
	TIMES SOURCE:32 , 0.40
	TIMES SOURCE:17 , 1.10
ELSE
	SOURCE:12 = 500
	TIMES SOURCE:32 , 0.20
	TIMES SOURCE:17 , 1.20
