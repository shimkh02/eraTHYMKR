	TIMES SOURCE:32 , 2.20
	TIMES SOURCE:17 , 0.70
ELSEIF ABL:14 == 1
	SOURCE:12 = 40
	TIMES SOURCE:32 , 1.50
	TIMES SOURCE:17 , 0.80
ELSEIF ABL:14 == 2
	SOURCE:12 = 80
	TIMES SOURCE:32 , 1.00
	TIMES SOURCE:17 , 0.90
