@COM427
PRINTL 음모 지지기
TSTR:0 = 음모 지지기
CALL TRAIN_MESSAGE_COM427

DOWNBASE:0 += 55
DOWNBASE:1 += 160

LOCAL:1 = 2000
SOURCE:16 = 750
SOURCE:24 = 200
SOURCE:22 = 300
SOURCE:31 = 1500
SOURCE:20 = 800

;조교자의 ABL:기교를 본다
IF ABL:PLAYER:12 == 0
	TIMES SOURCE:20 , 4.00
ELSEIF ABL:PLAYER:12 == 1
	TIMES SOURCE:20 , 2.00
ELSEIF ABL:PLAYER:12 == 2
	TIMES SOURCE:20 , 1.50
ELSEIF ABL:PLAYER:12 == 3
	TIMES SOURCE:20 , 1.20
ELSEIF ABL:PLAYER:12 == 4
	TIMES SOURCE:20 , 1.10
ELSE
	TIMES SOURCE:20 , 1.00
ENDIF

;ABL:노출벽을 본다
IF ABL:14 == 0
	TIMES LOCAL:1 , 0.80
ELSEIF ABL:14 == 1
	TIMES LOCAL:1 , 1.00
ELSEIF ABL:14 == 2
	TIMES LOCAL:1 , 1.20
ELSEIF ABL:14 == 3
	TIMES LOCAL:1 , 1.50
ELSEIF ABL:14 == 4
	TIMES LOCAL:1 , 2.00
ELSE
	TIMES LOCAL:1 , 2.60
ENDIF

;ABL:마조끼를 본다
IF ABL:21 == 0
	TIMES LOCAL:1 , 0.80
ELSEIF ABL:21 == 1
	TIMES LOCAL:1 , 1.00
ELSEIF ABL:21 == 2
	TIMES LOCAL:1 , 1.20
ELSEIF ABL:21 == 3
	TIMES LOCAL:1 , 1.40
ELSEIF ABL:21 == 4
	TIMES LOCAL:1 , 1.70
ELSE
	TIMES LOCAL:1 , 2.00
ENDIF

SOURCE:24 += LOCAL:1
SOURCE:18 += (LOCAL:1 / 2)
SOURCE:12 += LOCAL:1

;새드을 본다
SIF TALENT:81
	TIMES SOURCE:20 , 2.00
;작은 몸집 체형, 소인 체형
SIF TALENT:128 || TALENT:127
	TIMES SOURCE:12 , 2.50

;불길에 약할 것 같은 분들(치르노, 레티, 리굴, 미스티아)
IF NO:TARGET == 5 || NO:TARGET == 12 || NO:TARGET == 24 || NO:TARGET == 25
	TIMES SOURCE:20 , 2.00
	SOURCE:25 += 3000
ENDIF

IF TALENT:65 == 0
	PRINTL
	PRINTFORMW %조사선택(CALLNAME:TARGET, "는")% [%TALENTNAME:65%]가 되었다.
	TALENT:65 = 1
ENDIF
;털은 나중에 나 오지 않게 된다
CFLAG:36 = 1
;반들반들이 된다
SIF BASE:5
	BASE:5 = 0

;노출 쾌락 경험 입수 판정
TFLAG:100 |= 2

RETURN 1

