@COM_ABLE427
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:427 > 0
	RETURN 0
;캐릭터 전용 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 16384) == 0
	RETURN 0
;조교자가 ＥＸ化していない妹紅でないとダメ
SIF NO:PLAYER != 31 || CFLAG:PLAYER:0
	RETURN 0
;수치 플레이계 확장 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 512) == 0
	RETURN 0
;[후타나리]かつ조교자의 기교가 3미만이면 불가
SIF TALENT:121 && ABL:PLAYER:12 < 3
	RETURN 0
;[パイパン]だと不可, 生えそろっていないと無理
SIF TALENT:65 || (CFLAG:36 && BASE:5 < 250)
	RETURN 0
;テキストより[작은 체형]はデフォでツルツル。[소인체형]もそれに準じる
SIF (TALENT:128 || TALENT:127) && CFLAG:36 == 0
	RETURN 0
;Ｖ계 장착구 사용 중에는 불가
SIF TEQUIP:20 || TEQUIP:21
	RETURN 0
;오나홀 · 전극 오나홀사용 중에는 불가
SIF TEQUIP:30 == 2 || TEQUIP:30 == 6
	RETURN 0
;귀갑 묶기일 때는 무리
SIF TEQUIP:40 == 5
	RETURN 0
;승마 중에는 불가
SIF TEQUIP:43
	RETURN 0
;욕실 플레이 중에는 플레이 매트가 없으면 불가
SIF TEQUIP:53 && ITEM:42 == 0 && NOITEM == 0
	RETURN 0
;샤워 중에는 불가
SIF TEQUIP:54
	RETURN 0
;○○목욕탕 입욕 중에는 불가
SIF TEQUIP:55
	RETURN 0
;기저귀 플레이 중에는 불가
SIF TEQUIP:58
	RETURN 0
;알몸 앞치마, 학교수영복 플레이, 코스프레 중에는 불가
SIF TEQUIP:59
	RETURN 0
;시간정지 중에는 무리
SIF TEQUIP:71
	RETURN 0
RETURN 1

