@COM_ABLE227
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:227 > 0
	RETURN 0
;조교자가 새드持ちまたはドＳ持ちまたは새드끼Lv3이상이 아니면 불가
SIF TALENT:PLAYER:81 == 0 && TALENT:PLAYER:177 == 0 && ABL:PLAYER:20 < 3
	RETURN 0
;수면 중에는 불가
SIF EQUIP:14
	RETURN 0
;실신 중에는 불가
SIF TFLAG:899 > 0
	RETURN 0
;시간정지 중에는 무리
SIF TEQUIP:71
	RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
@COM227
PRINTL 매도
TSTR:0 = 매도
CALL TRAIN_MESSAGE_COM227

;-------------------------------------------------
;소스의 계산
;-------------------------------------------------
DOWNBASE:0 += 5
DOWNBASE:1 += 150

SOURCE:22 = 200
SOURCE:31 = 300
SOURCE:32 = 200

;ABL:마조끼를 본다
IF ABL:21 == 0
	SOURCE:16 = 150
	SOURCE:23 = 60
	SOURCE:18 = 0
	TIMES DOWNBASE:1 , 2.00
ELSEIF ABL:21 == 1
	SOURCE:16 = 300
	SOURCE:23 = 120
	SOURCE:18 = 100
	TIMES SOURCE:22 , 1.50
	TIMES DOWNBASE:1 , 1.50
ELSEIF ABL:21 == 2
	SOURCE:16 = 600
	SOURCE:23 = 240
	SOURCE:18 = 150
	TIMES SOURCE:22 , 2.00
	TIMES DOWNBASE:1 , 1.00
ELSEIF ABL:21 == 3
	SOURCE:16 = 900
	SOURCE:23 = 360
	SOURCE:18 = 250
	TIMES SOURCE:22 , 2.50
	TIMES DOWNBASE:1 , 0.75
ELSEIF ABL:21 == 4
	SOURCE:16 = 1500
	SOURCE:23 = 480
	SOURCE:18 = 500
	TIMES SOURCE:22 , 3.00
	TIMES DOWNBASE:1 , 0.50
ELSE
	SOURCE:16 = 2200
	SOURCE:23 = 600
	SOURCE:18 = 1000
	TIMES SOURCE:22 , 4.00
	TIMES DOWNBASE:1 , 0.25
ENDIF

;TALENT:반항적을 본다
IF TALENT:11
	TIMES SOURCE:22 , 1.50
	TIMES SOURCE:32 , 2.50
ENDIF
;TALENT:기장을 본다
IF TALENT:12
	TIMES SOURCE:22 , 2.50
	TIMES SOURCE:32 , 1.50
ENDIF
;TALENT:거만함을 본다
IF TALENT:15
	TIMES SOURCE:22 , 1.75
	TIMES SOURCE:32 , 1.75
ENDIF
;TALENT:프라이드 높은을 본다
IF TALENT:16
	TIMES SOURCE:22 , 2.00
	TIMES SOURCE:32 , 2.00
;TALENT:프라이드 낮은을 본다
ELSEIF TALENT:17
	TIMES SOURCE:22 , 0.75
	TIMES SOURCE:32 , 0.75
ENDIF
;TALENT:감정결여를 본다
IF TALENT:22
	TIMES SOURCE:16 , 0.50
	TIMES SOURCE:23 , 0.50
	TIMES SOURCE:22 , 0.50
	TIMES SOURCE:31 , 0.50
	TIMES SOURCE:32 , 0.50
ENDIF

;줄로 긴박중 때 효과 상승
SIF TEQUIP:40
	TIMES SOURCE:22 , 1.50
;볼 개그 장착중 때 효과 상승
SIF TEQUIP:42
	TIMES SOURCE:22 , 1.75

IF ABL:21 == 0 && TFLAG:84 == 0
	;반발 각인 1에 상당(프라이드 높은 또는 거만함 소유라면 2)
	TFLAG:84 = (TALENT:15 || TALENT:16) ?  2 # 1
ELSEIF ABL:21 > 2
	;마조끼 3이상이라면 매도해져 쾌락을 느끼도록(듯이)
	TFLAG:100 |= 1
ENDIF

RETURN 1

