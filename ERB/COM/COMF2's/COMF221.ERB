;=============================================================================
;채찍(SELECTCOM=221), 촉수채찍 치기(SELECTCOM=551)
;=============================================================================
;………………………………………………
;실행 판정
;………………………………………………
@COM_ABLE221
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:221 > 0
	RETURN 0
;아이템을 가지고 있거나, 아이템 없음 설정이 아니면 불가
SIF ITEM:32 == 0 && NOITEM == 0
	RETURN 0
;순종5미만의 ASSI일 경우, 実行できない(새드거나 새드끼Lv3이상か狂気, 또는 망신이나 복종이 있다면 ＯＫ)
IF ASSIPLAY
	SIF ABL:ASSI:10 < 5 && TALENT:ASSI:81 == 0 && ABL:ASSI:20 < 3 && TALENT:ASSI:158 == 0 && TALENT:ASSI:151 == 0 && TALENT:ASSI:160 == 0
		RETURN 0
ENDIF
;욕실 플레이 중에는 불가
SIF TEQUIP:53
	RETURN 0
;○○목욕탕 입욕 중에는 불가
SIF TEQUIP:55
	RETURN 0
;알몸 앞치마 중에는 불가
SIF TEQUIP:59 == 1
	RETURN 0
;나체정식 중에는 불가
SIF TEQUIP:60
	RETURN 0
;촉수 조교 중에는 불가
SIF TEQUIP:90
	RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
;촉수채찍 치기는 COMF500.ERB로부터 JUMP 해 온다.
;실제로는 고통이 있기 (위해)때문에 좀 더 체력 기력을 갖고 있고 쉰다
@COM221
IF TEQUIP:90
	PRINTL 촉수채찍
	TSTR:0 = 촉수채찍
ELSE
	TSTR:7 = 채찍
	IF FLAG:1100 & 1
		;技師パッチ有効なら特殊な名前チェック
		FLAG:1110 = 32
		CALL NAMECHECK_CUSTOMTOOL
	ELSE
		TSTR:8 = %TSTR:7%
		TSTR:9 = %TSTR:7%
	ENDIF
	PRINTFORML %TSTR:8%
	TSTR:0 = 채찍
ENDIF
CALL TRAIN_MESSAGE_COM221

DOWNBASE:0 += 100
DOWNBASE:1 += 80

SOURCE:31 = 1000

;PALAM:고통을 본다
IF PALAM:16 < PALAMLV:1
	SOURCE:20 = 1000
ELSEIF PALAM:16 < PALAMLV:2
	SOURCE:20 = 1500
ELSEIF PALAM:16 < PALAMLV:3
	SOURCE:20 = 2200
ELSEIF PALAM:16 < PALAMLV:4
	SOURCE:20 = 3000
ELSE
	SOURCE:20 = 4000
ENDIF

IF (FLAG:1100 & 1) && TEQUIP:90 == 0
	;技師パッチ有効なら道具使用時ソースチェックを呼ぶ
	;FLAG 1110:道具番号 1111:改善タイプ 1112:SOURCEの実値 
	FLAG:1110 = 32
	FLAG:1111 = 2
	FLAG:1112 = SOURCE:20
	CALL SOURCECHECK_CUSTOMTOOL
	SOURCE:20 = FLAG:1120
ENDIF

IF TEQUIP:90
	SELECTCOM = 551
	SOURCE:31 *= 2
	SOURCE:23 = SOURCE:20 / 2
	;촉수 경험 플래그
	TFLAG:90 = 1
ELSEIF TALENT:120 == 0 && TALENT:PLAYER:120 == 0
	TCVAR:12 += 2
ELSEIF TALENT:120 && TALENT:PLAYER:120
	TCVAR:13 += 2
ENDIF
;주인 경험 플래그
SIF ASSIPLAY == 0 && ABL:21 >= 2
	TFLAG:50 += 1
;SM교육 플래그
SIF ASSIPLAY
	TFLAG:55 = 2

;커맨드 속성：촉수
IF TEQUIP:90
	TFLAG:98 = 8
;커맨드 속성：도구(조교자)
ELSE
	TFLAG:98 = 1
ENDIF
RETURN 1

;--------------------------------------------------
;조교시 메시지
;--------------------------------------------------
@TRAIN_MESSAGE_COM221
CALL KOJO_TRAIN_MESSAGE_COM
SIF FLAG:10 == 0 || CFLAG:99 == 1 || RESULT != 0
	RETURN 0

PRINTL
IF TEQUIP:90
	PRINTFORMW 채찍과 같이 된 촉수가 %조사선택(CALLNAME:TARGET, "를")% 내려쳐, 피부에 새빨간 줄기가 새겨지고 있다….
ELSE
	PRINTFORMW %조사선택(TSTR:9, "를")% 높이 치켜들고 마음껏 내려치자, %CALLNAME:TARGET%의 피부에 새빨간 줄기가 새겨졌다….
ENDIF
